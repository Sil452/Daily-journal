<%- include('partials/header.ejs') %>

<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="postTitle"  placeholder="Your post title" required>
  </div>
  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="3" placeholder="Today I had such a nice day..." required></textarea>
  </div>
  <button type="submit" class="btn">Publish</button>
</form>

